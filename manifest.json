{
  "manifest_version": 2,

  "name": "Steam Discussion Helper",
  "description": "Adds new functionality to assist in posting in Steam Discussions.",
  "version": "1.0",
  "background":{
	"scripts": ["/lib/jquery-1.11.3.min.js", "/lib/underscore-min.js", "steamDiscussionHelper.js"]
  },
  "content_scripts": [{
  	"matches": ["*://*.steamcommunity.com/*"],
  	"js":      ["loadSteamDiscussionHelper.js"]
  }],
  "permissions": [
    "<all_urls>",
	"tabs"
  ]
}